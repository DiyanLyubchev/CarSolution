@model List<Domain.Model.CarViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
   <h1>Welcome car info</h1>
</div>
<body style="background-color:white">
    <div class="my-2">
        <a asp-controller="Home" asp-action="NewCar" class="btn btn-success">Добавяне на кола</a>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Кола</th>
                <th scope="col">Модел</th>
                <th scope="col">Тип двигател</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td>@car.CarBrand</td>
                    <td>@car.CarModel</td>
                    <td>@car.EngineType</td>
                </tr>
            }
        </tbody>
    </table>
</body>